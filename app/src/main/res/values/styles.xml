<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/bg_white</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Text theme. -->
    <style name="Number">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Title.Logo">
        <item name="android:textSize">38sp</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawableStart">@drawable/ic_title_rect</item>
        <item name="android:drawableEnd">@drawable/ic_title_rect</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="Text.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.White">
        <item name="android:textColor">@color/bg_white</item>
    </style>

    <style name="Text.Contact">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="Text.Category">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text.Description">

    </style>

    <!-- Btn theme. -->
    <style name="Btn">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Btn.Transparent">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Btn.Transparent.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Btn.Transparent.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Btn.Red">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/btn_bg_red</item>
    </style>

    <style name="Btn.Transparent.Back">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <style name="Btn.Transparent.Gallery">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/ic_gallery</item>
    </style>

    <!-- Content theme -->
    <style name="Content">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Content.RadiusTop">
        <item name="android:background">@drawable/bg_content_corner_top</item>
    </style>

    <!-- RatingBar theme -->
    <style name="RatingBar">
        <item name="android:stepSize">1</item>
        <item name="android:numStars">5</item>
        <item name="prb_tickNormalDrawable">@drawable/ic_star</item>
        <item name="prb_tickSelectedDrawable">@drawable/ic_star_active</item>
    </style>

    <!-- EditText theme -->
    <style name="Input">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <!-- Other -->
    <style name="Discount">
        <item name="android:background">@drawable/bg_discount</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
