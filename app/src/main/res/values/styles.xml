<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <!-- Text theme. -->
    <style name="Number">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <!--TODO: Никогда не задавай отступы в стилях текста, это убивает переиспользование на корню.-->
    <style name="Title">
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--Дело вкуса, но наглядней было бы наследовать стили не через parent=... а неймингом через точку-->
    <!--Например: Text.Bold -->
    <style name="Text_bold" parent="Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text_contact" parent="Text">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="Text_category" parent="Text">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Btn theme. -->
    <style name="Btn"></style>

    <style name="Btn_transparent" parent="Btn">
        <item name="android:background">#00000000</item>
    </style>

    <style name="btn_back" parent="Btn_transparent">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <!-- Content theme -->
    <style name="content">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="bg_radius_top" parent="content">
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:background">@drawable/bg_content_corner_top</item>
    </style>
</resources>
