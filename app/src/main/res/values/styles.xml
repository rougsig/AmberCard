<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="AppTheme.ActionBar.Transparent" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <!-- Text theme. -->
    <style name="Number">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">30sp</item>
        <item name="android:color">@color/black</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/yeseva_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineSpacingExtra">1sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Text.Bold">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Contact">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:drawablePadding">16dp</item>
    </style>

    <style name="Text.Category">
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!-- Btn theme. -->
    <style name="Btn"></style>

    <style name="Btn.Transparent">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Btn.Transparent.Back">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:src">@drawable/ic_back</item>
    </style>

    <!-- Content theme -->
    <style name="Content">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Content.RadiusTop">
        <item name="android:layout_marginTop">-8dp</item>
        <item name="android:background">@drawable/bg_content_corner_top</item>
    </style>
</resources>
